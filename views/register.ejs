<% include ./partials/header.ejs%>


<div class="w-full  min-h-screen bg-zinc-300 flex justify-center items-center">
  <div class="max-w-sm gap-5 md:max-w-[60vh] h-auto bg-white rounded-3xl px-5 py-5 sm:px-8 md:px-20 md:py-10 flex flex-col justify-center items-center">
    <img class="w-20 h-20 select-none" src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="logo">
    <h1 class="text-3xl text-center w-full block font-medium tracking-tight text-zinc-800 leading-none">Welcome to Pinterest</h1>
    <p class="text-gray-800 text-lg -mt-4">Find new ideas to try</p>
    <form action="/register" method="post">
        <input class="font-medium border-2 rounded-lg block w-full mt-2 px-3 py-2" type="text" name="fullname" placeholder="Full Name">
      <input class="font-medium border-2 rounded-lg block w-full mt-2 px-3 py-2" type="text" name="username" placeholder="User Name">
      <input class="font-medium border-2 rounded-lg block w-full mt-2 px-3 py-2" type="email" name="email" placeholder="Email">
      <input class="font-medium border-2 rounded-lg block w-full mt-2 px-3 py-2" type="password" name="password" placeholder="Create a password">
      <input class="border-2  block w-full mt-5 px-3 py-2 bg-red-600 rounded-full text-white font-bold cursor-pointer" type="submit" value="Continue">
      <p class="text-[13px] text-center text-zinc-700 mt-5 w-4/5 sm:w-full mx-auto">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
      <a class="font-medium text-center inline-block w-full mt-2" href="/login">Already a member?
        Log in</a>
    </form>
  </div>
</div>
















